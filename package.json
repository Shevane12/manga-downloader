{
  "name": "baruch-manga-downloader",
  "productName": "Baruch: Manga Downloader",
  "version": "0.0.5",
  "description": "A cross platform manga downloader.",
  "main": "./app/build/app.js",
  "scripts": {
    "dev": "concurrently \"cross-env NODE_ENV=development webpack-dev-server --config webpack/dev.config.js\" \"cross-env NODE_ENV=development electron ./app/src/main/app.js\"",
    "prod": "cross-env NODE_ENV=production webpack --progress --color --config webpack/prod.config.js",
    "start": "npm run prod && electron app/build/app.js",
    "lint": "eslint --ext .jsx,.js app/src/main --fix",
    "test-run": "electron-builder",
    "pack": "electron-builder --dir",
    "dist": "rimraf ./app/build && rimraf ./release && npm run prod && electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "author": "Adrian Dela Piedra <adrian.onrails@gmail.com>",
  "license": "MIT",
  "build": {
    "productName": "Baruch: Manga Downloader",
    "copyright": "Copyright Â© 2018 Adrian Dela Piedra",
    "asar": true,
    "files": [
      "app/build/**/*",
      "icon.ico"
    ],
    "win": {
      "target": "NSIS"
    },
    "linux": {
      "asarUnpack": [
        "icon.ico"
      ],
      "category": "Utility",
      "target": [
        "deb",
        "AppImage"
      ]
    },
    "mac": {
      "category": "public.app-category.utilities"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "runAfterFinish": true,
      "installerIcon": "./build/icon.ico",
      "license": "LICENSE",
      "deleteAppDataOnUninstall": true
    },
    "directories": {
      "output": "release"
    }
  },
  "keywords": [
    "manga",
    "downloader",
    "baruch",
    "electron",
    "desktop",
    "software"
  ],
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.4",
    "babel-minify-webpack-plugin": "^0.3.1",
    "babel-polyfill": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-1": "^6.24.1",
    "concurrently": "^3.5.1",
    "copy-webpack-plugin": "^4.5.1",
    "cross-env": "^5.1.4",
    "css-loader": "^0.28.11",
    "electron": "^2.0.0",
    "electron-builder": "20.14.7",
    "electron-devtools-installer": "^2.2.3",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-google": "^0.9.1",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.7.0",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "file-loader": "^1.1.11",
    "node-sass": "^4.9.0",
    "react-hot-loader": "^4.1.2",
    "sass-loader": "^7.0.1",
    "style-loader": "^0.21.0",
    "url-loader": "^1.0.1",
    "webpack": "^4.6.0",
    "webpack-cli": "^2.0.15",
    "webpack-dev-server": "^3.1.3",
    "webpack-node-externals": "^1.7.2",
    "webpack-sources": "1.0.1"
  },
  "dependencies": {
    "animate.css": "^3.6.1",
    "archiver": "^2.1.1",
    "axios": "^0.18.0",
    "bootstrap": "^4.1.1",
    "bootswatch": "^4.1.1",
    "classnames": "^2.2.5",
    "font-awesome": "^4.7.0",
    "history": "^4.7.2",
    "jquery": "^3.3.1",
    "lodash": "^4.17.10",
    "mkdirp": "^0.5.1",
    "popper.js": "^1.14.3",
    "react": "^16.4.0",
    "react-bootstrap": "^0.32.1",
    "react-bootstrap-theme-switcher": "^1.0.7",
    "react-collapsible": "^2.2.0",
    "react-dom": "^16.4.0",
    "react-lazy": "^0.5.1",
    "react-redux": "^5.0.7",
    "react-router": "4.2.0",
    "react-router-dom": "4.2.2",
    "react-router-page-transition": "^3.1.0",
    "redux": "^4.0.0",
    "redux-thunk": "^2.2.0",
    "rimraf": "^2.6.2"
  }
}
